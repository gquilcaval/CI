<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <padding
                        android:left="4dp"
                        android:top="3dp"
                        android:right="4dp"
                        android:bottom="4dp"
                        />
                    <stroke android:width="1px" android:color="@color/border" />
                    <corners android:radius="2dp" />
                </shape>
            </item>
            <item android:right="@dimen/margin_xsmall">
                <bitmap android:gravity="center|right" android:src="@drawable/arrow_down" />
            </item>

        </layer-list>

    </item>

</selector>