<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/lista_clase"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Spinner
            android:id="@+id/tv_clase_tareo"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_default"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:clickable="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView15"
            app:layout_constraintTop_toBottomOf="@+id/textView15" />

        <TextView
            android:id="@+id/tv_nivel1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_clase_tareo"
            tools:text="Nivel 1 :"
            tools:visibility="visible" />

        <AutoCompleteTextView
            android:id="@+id/actv_nivel1"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_default"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:drawableEnd="@drawable/ic_search"
            android:focusable="true"
            android:inputType="textNoSuggestions"
            android:paddingLeft="@dimen/padding_default"
            android:text=""
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_nivel1"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_nivel2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/actv_nivel1"
            tools:text="Nivel 2 :"
            tools:visibility="visible" />

        <AutoCompleteTextView
            android:id="@+id/edt_msg_incidencia"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_default"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:drawableEnd="@drawable/ic_search"
            android:focusable="true"
            android:inputType="textPhonetic"
            android:paddingLeft="@dimen/padding_default"
            android:text=""
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_nivel2"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_nivel3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/edt_msg_incidencia"
            tools:text="Nivel 3 :"
            tools:visibility="visible" />

        <AutoCompleteTextView
            android:id="@+id/actv_nivel3"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_default"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:drawableEnd="@drawable/ic_search"
            android:focusable="true"
            android:inputType="textPhonetic"
            android:paddingLeft="@dimen/padding_default"
            android:text=""
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_nivel3"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_nivel4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/actv_nivel3"
            tools:text="Nivel 4 :"
            tools:visibility="visible" />

        <AutoCompleteTextView
            android:id="@+id/actv_nivel4"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_default"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:drawableEnd="@drawable/ic_search"
            android:focusable="true"
            android:inputType="textPhonetic"
            android:paddingLeft="@dimen/padding_default"
            android:text=""
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_nivel4"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_nivel5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="9dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/actv_nivel4"
            tools:text="Nivel 5 :"
            tools:visibility="visible" />

        <AutoCompleteTextView
            android:id="@+id/actv_nivel5"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_default"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:drawableEnd="@drawable/ic_search"
            android:focusable="true"
            android:inputType="textPhonetic"
            android:paddingLeft="@dimen/padding_default"
            android:text=""
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_nivel5"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
